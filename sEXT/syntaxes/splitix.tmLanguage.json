{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Splitix",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" }
  ],
  "repository": {
    "keywords": {
		"patterns": [
			{
			"name": "keyword.initialization.splitix",
			"match": "\\b(using|from|as|lang)\\b"
			},
			{
			"name": "keyword.scriptControl.splitix",
			"match": "\\b(on|halt|pause)\\b"
			},
			{
			"name": "keyword.io.splitix",
			"match": "\\b(print|input)\\b"
			},
			{
			"name": "keyword.control.splitix",
			"match": "\\b(repeat|if|else|elif|while|until|for|foreach|switch|do|wait|then|case|default)\\b"
			},
      {
        "name": "keyword.variables.splitix",
        "match": "\\b(var|const)\\b"
      }
		]
	},
    "strings": {
      "name": "string.quoted.double.splitix",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.splitix",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.splt"
}